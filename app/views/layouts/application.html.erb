    </div>
  </body>
  <footer id="sticky-footer" class="flex-shrink-0">
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand bg-dark">
        <div class="container-fluid">
          <div class="collapse navbar-collapse text-white-50" id="navbarNav">
            <ul class="navbar-nav">
              <li class="list-group-item"><%= link_to "Home", root_path, style:"color:  #cc98fa !important;", class:"nav-link"  %></li>
              <li class="list-group-item"><%= link_to "New Category", new_category_path, style:"color:  #cc98fa !important;", class:"nav-link"  %></li>
              <li class="list-group-item"><%= link_to "New Request", new_post_path, style:"color:  #cc98fa !important;", class:"nav-link"  %></li>
              <li class="list-group-item"><%= link_to "Categories", categories_path, style:"color:  #cc98fa !important;", class:"nav-link"  %></li>
              <li class="list-group-item"><%= link_to "Requests", posts_path, style:"color:  #cc98fa !important;", class:"nav-link"  %></li>
            </ul>
            <ul class="navbar-nav flex-row flex-wrap ms-md-auto">
              <li class="list-group-item"><%= link_to "Edit Account", edit_user_registration_path, style:"color:  #cc98fa !important;", class:"nav-link"  %></li>
              <li class="list-group-item"><%= link_to "Log out", destroy_user_session_path, style:"color: red !important;", class:"nav-link" %></li>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>
  </footer>

  <%# JS for TABS %>
  <script>
    function openCity(evt, cityName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(cityName).style.display = "block";
    evt.currentTarget.className += " active";
    }
  </script>

  <%# JS for sound on regular cards %>
  <script>
    function play(element){
        var audio = document.getElementById(element);
        // audio.currentTime = 0;
        audio.play();
    }
  </script>

  <%# JS for sound on redirect %>
  <script type="text/javascript">
    function playSound(event){
      console.log(event);

      event.preventDefault();

      const link = event.currentTarget;
      const audio = document.getElementById(link.dataset.audio)

      audio.onended = function() { window.location = link };

      audio.play();
    }
  </script>
</html>
