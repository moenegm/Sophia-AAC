<div id="<%= dom_id post %>">
  <div class="container">
    <div class="row">
      <div class="col-6">
        <table class="table table-striped">
          <tbody>
            <tr>
              <th scope="row">Title</th>
              <td><%= post.title %></td>
            </tr>
            <tr>
              <th scope="row">Category</th>
              <td><%= post.category %></td>
            </tr>
            <tr>
              <th scope="row">Location</th>
              <td><%= post.location %></td>
            </tr>
            <tr>
              <td colspan="2"><%= audio_tag(polymorphic_path(post.sound), controls: true, class: "audio-play", id: "grapes") %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-6 justify-content-center text-center">
        <a class="p-1 audioButton" onclick="play('grapes')"> <%= image_tag(post.image, class:"request-pic") %> </a>
      </div>
    </div>
  </div>
</div>
<script>
    function play(element){
        var audio = document.getElementById(element);
        audio.currentTime = 0;
        audio.play();
    }
</script>
