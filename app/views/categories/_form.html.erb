<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>

    </div>
  <% end %>

  <div class="card">
    <div class="card-header">
      New category
    </div>
    <div class="card-body">
      <%= form.text_field :category, class:"form-control mb-3", placeholder:"Create a new Category" %>
      <label class="form-label">Category Photo</label>
      <%= form.file_field :image, class:"form-control mb-2"%>
      <hr class="border border-primary border-3 opacity-75">
      <label class="form-label">Category Sound</label>
      <%= form.file_field :sound, class:"form-control mb-2"%>
    </div>
    <div class="card-footer text-muted">
      <%= form.submit class:"btn btn-primary" %>
    </div>
  </div>
<% end %>
