<div class="col align-self-center card mt-3">
  <div class="card-header text-center">
    Edit Your Profile
  </div>
  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row">
        <div class="field form-group mb-3 col-6">
            <%= f.text_field :parent_first_name, autofocus: true, autocomplete: "name", class:"form-control mb-3", placeholder:"Guardian's First Name" %>
        </div>  

        <div class="field form-group mb-3 col-6">
            <%= f.text_field :parent_last_name, autofocus: true, autocomplete: "name", class:"form-control mb-3", placeholder:"Guardian's Last Name" %>
        </div>       
      </div>

      <div class="row">
        <div class="field form-group mb-3 col-6">
            <%= f.text_field :kid_name, autofocus: true, autocomplete: "name", class:"form-control mb-3", placeholder:"Kiddo's Name" %>
        </div>   

        <div class="field form-group mb-3 col-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", placeholder:"Email"  %>
        </div>      
      </div>

      <div class="row">
        <div class="field form-group text-center mb-3">
          <%= f.file_field :avatar, class:"form-control", placeholder:"Choose an Avatar" %>
        </div>      
      </div>

      <div class="row mb-5">
        <div class="col">
          <div class="form-check form-switch">
            <input onclick="myFunction()" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Need to Update your Password?</label>
          </div>

          <div id="myDIV" style="display: none;">
            <div class="field form-group mb-3">
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-3", placeholder:"New Password: (#{@minimum_password_length} characters minimum)" %>
            </div>

            <div class="field form-group mb-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-3", placeholder:"Confirm New Password" %>
            </div>
          </div>
        </div>
      </div>

      <div class="field form-group mb-3">
        <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control mb-3 btn-outline-danger", placeholder:"Enter Current Password to confirm any changes" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="actions">
        <%= f.submit "Update", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
</br>
<div class="col align-self-center card text-center">
  <div class="card-header"> 
    Unhappy? Cancel my account!
  </div>
  <div class="card-body">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>
  </div>
</div>

<script>
  function myFunction() {
    var x = document.getElementById("myDIV");
    if (x.style.display === "none") {
      x.style.display = "block";
    } else {
      x.style.display = "none";
    }
  }
</script>